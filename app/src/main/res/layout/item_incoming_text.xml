<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@android:color/transparent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_person_gray"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:text="Name"
                    android:layout_toRightOf="@+id/ivProfileImage"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/tvBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUserName"
                    android:layout_toLeftOf="@+id/tvTimeStamp"
                    android:layout_toRightOf="@+id/ivProfileImage"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLength="45"
                    android:maxLines="1"
                    android:textSize="12dp"
                    tools:text="Message" />

                <TextView
                    android:id="@+id/tvTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/Read"
                    android:layout_marginRight="5dp"
                    tools:text="Time" />

                <View
                    android:id="@+id/horizontalLine"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_below="@+id/ivProfileImage"
                    android:layout_marginTop="5dp"
                    android:background="#D3D3D3"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <ImageView
                    android:id="@+id/Read"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tvBody"
                    android:layout_alignEnd="@+id/tvTimeStamp"
                    android:layout_alignRight="@+id/tvTimeStamp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@android:drawable/ic_notification_overlay" />

        </RelativeLayout>

</RelativeLayout>