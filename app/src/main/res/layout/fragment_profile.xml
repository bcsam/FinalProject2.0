<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.codepath.finalproject.ProfileFragment">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="140dp"
        android:layout_marginTop="15dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_noun_992928_cc"
        android:visibility="invisible"
        android:transitionName="@string/profileTransition"/>

    <ImageView
        android:id="@+id/ivProfileIcon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:transitionName="@string/profileTransition"
        app:srcCompat="@drawable/ic_noun_992928_cc"
        android:background="@drawable/big_circle"
        android:visibility="visible"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:text="AD"
        android:textSize="44sp"
        android:background="@drawable/rounded_textview"
        android:layout_centerHorizontal="true"
        android:textColor="@color/lightGray"
        android:gravity="center"
        android:id="@+id/circleText"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivProfile"
        android:layout_marginTop="10dp"
        android:layout_weight=".3"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/darkGray"
        android:textSize="28sp"
        android:transitionName="@string/nameTransition"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight=".3"
        android:gravity="center_horizontal"
        android:layout_below="@id/tvName"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
