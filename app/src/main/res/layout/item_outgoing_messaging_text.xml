    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_person_gray" />

        <ImageView
            android:id="@+id/ivProfileIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_person_outline_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_textview"
            android:layout_marginRight="5dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="AD"
            android:textSize="20sp"
            android:background="@drawable/rounded_textview"
            android:textColor="@color/lightGray"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/circleText"
            android:layout_marginRight="5dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:linksClickable="true"
            android:maxWidth="180dp"
            android:text="Message"
            android:backgroundTint="@color/lighterGray"
            android:textSize="14dp"
            android:background="@drawable/turquoise"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/ivProfileImage"
            android:layout_toStartOf="@+id/ivProfileImage" />

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tvBody"
            android:layout_toStartOf="@+id/tvBody"
            android:layout_alignBottom="@+id/tvBody"
            android:maxLines="1"
            android:text="Time"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:visibility="visible" />

